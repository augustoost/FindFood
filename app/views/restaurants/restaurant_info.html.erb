<h2 class="text-center"><%= @restaurant.name %></h2>
<h6 class="text-center"><%= @restaurant.address %></h6>
<h6 class="text-center"><%= @restaurant.phone %></h6>

                      <hr>

<div class="box-content">
<% @dishes.all.each do |dishes| %>
    <div class="box">
      <div class="espacoLateral espacoTopo">
        <div class="card border-dark mb-3" style="max-width: 18rem;">
          <div class="card-header bg-transparent border-dark text-center">
            <h2><%=  highlight(dishes.description,@search) %></h2>
          </div>

          <div class="card-body text-dark">
            <p class="card-text">
            <small><b>Tempo de Produção:</b> <%= dishes.time %></small>
            <br>
            <small><b>Ingredientes:</b> <%= dishes.ingredients.map(&:description).join(', ') %></small>
            </p>
          </div>
          <div class="card-footer text-center">
            <h6>R$ <%= dishes.price %></h6>
          </div>
        </div>
      </div>
    </div>
<% end %>

</div>