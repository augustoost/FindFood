<p id="notice"><%= notice %></p>

<div class="espacoLateral">

  <h1>Ingredients</h1>

  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td scope="row" ><%= ingredient.description %></td>
        <td>
          <div class="button-group">
            <%= link_to 'Show', ingredient, :class => "btn btn-outline-info"  %>
            <%= link_to 'Edit', edit_ingredient_path(ingredient), class: "btn btn-outline-secondary" %>
            <%= link_to 'Destroy', ingredient, :class => "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Ingredient', new_ingredient_path, :class => "btn btn-outline-success " %>
</div>