<p id="notice"><%= notice %></p>

<div class="espacoLateral">

  <h1>Categories</h1>

  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td scope="row" ><%= category.description %></td>
        <td>
          <div class="button-group">
            <%= link_to 'Show', category, :class => "btn btn-outline-info"  %>
            <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-secondary" %>
            <%= link_to 'Destroy', category, :class => "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Category', new_category_path, :class => "btn btn-outline-success " %>
</div>
